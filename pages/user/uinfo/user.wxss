
/**index.wxss**/
.c_gong{
  color: #999;
}
.b_gong{
  background-color: #fff;
}
.xian{
  background-color: #9341a5;border-radius: 3px;color: #9341a5;
}




/* 轮播 */
.banner_img{
  position: relative;
}
.banner_img image{width: 100%; height: 100%;}
.banner_img swiper{
  height:200px;
}
.banner_img swiper swiper-item{
   height:200px;
}
.index_address{width: 90%;height: 40px;text-align: center;line-height: 40px;font-size: 14px;position: absolute;bottom: 0;background-color: #fff;left: 5%;border-top-left-radius:6px;
border-top-right-radius:6px;
border-bottom:1px dashed #f0f0f0;
}
.index_info{
  height: 240px;
  font-size: 14px;
  background-color: #f6f6f8;
   position: relative;
}
.index_info .info{
  width: 90%;height: 208px;
  padding-top:20px;
  border-bottom-left-radius:6px;
  border-bottom-right-radius:6px;
  font-size: 14px;position: absolute;top: 0;
  background-color: #fff;left: 5%;
}
.index_info .info view{
  width: 90%;
  padding-left: 5%;
}
.index_info .info view span{
  line-height: 36px;
}
.index_info .info view em{
  float: right;
  margin-top: 8px;
  line-height: 22px;
  border-radius: 3px;
  width: 60px;background-color:#f0f0f0;height: 22px;
  text-align: center;
}
.index_info .index_share{
  margin-top: 14px;
  color: #e77918;
  line-height: 30px;
  text-align: center;
  display: block;
  border: 1px solid #e77918;
  border-radius: 13px;
}
.index_info .index_share image{
  width: 16px;
  height: 16px;
}
/* 内容展示 */
.i_show {
  min-height: 40px;
  background-color: #fff;
}
.i_show .tit{
  font-size: 18px;
}
.i_show .tit em{
  margin-left: 10px;
  margin-right: 6px;
}
.i_show .goods_list{
  font-size: 14px;
}












