<form bindsubmit="formSubmit" bindreset="formReset">
<view class='base_info'>轮播图上传</view>
<view class='show_img'>
  <image src="/img/icon-tab-user-act.png" class="uploadImg {{isShow?'true':'hideTrue'}}" bindtap='uploadImage' ></image>
</view>
<view class='base_info'>基本信息</view>
<view class='edit_user'>
  <input name='id' value='{{uinfo.id}}' hidden='true'></input>
  <view class="user_info">
    <text class='x_name'>小程序名称：</text>
    <input type='text' name='x_name' value='{{uinfo.x_name}}' auto-focus placeholder='请输入名称'></input>
  </view>
  <view class="user_info">
    <text class='x_name'>地址：</text>
    <input placeholder="选择" name='city'  value="{{city}}-{{county}}" focus="{{focus}}" bindfocus="open" />
  </view>
  <view class="user_info">
    <input type='text' name='address' value='{{uinfo.address}}' auto-focus placeholder='请输入详细地址'></input>
  </view>
  <view class="user_info">
    <text class='x_name'>所在单位：</text>
    <input type='text' name='company' value='{{uinfo.company}}' auto-focus placeholder='请输入所在单位'></input>
  </view>
  <view class="user_info">
    <text class='x_name'>联系人：</text>
    <input type='text' name='name' value='{{uinfo.name}}' auto-focus placeholder='请输入联系人'></input>
  </view>
  <view class="user_info">
    <text class='x_name'>联系电话：</text>
    <input type='text' name='link_phone' value='{{uinfo.link_phone}}' auto-focus placeholder='请输入联系电话'></input>
  </view>
  <view class="user_info">
    <text class='x_name'>微信号：</text>
    <input type='text' name='wechat' value='{{uinfo.wechat}}' auto-focus placeholder='请输入微信号'></input>
  </view>

  <view class="user_info">
    <text class="section__title">是否是企业：</text>
    <switch name="is_c" />
  </view>
</view>
<view class="btn-area">
    <button type='warn'  form-type="submit">提交</button>
</view>


</form>

<view wx:if="{{condition}}" class="citypicker">
  <picker-view indicator-style="height: 36px;" style="width: 100%; height: 180px;" value="{{value}}" bindchange="bindChange" class="citybody">
    <view class="cityheader">
      <view bindtap="open" class="city-cancel">取消</view>
      <view bindtap="open" class="city-true">确定</view>
    </view>
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item" style="line-height: 36px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item" style="line-height: 36px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item" style="line-height: 36px;padding-left:10px;">{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>
