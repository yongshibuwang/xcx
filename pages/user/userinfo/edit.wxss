/* 区域选择 */
.container {
  z-index: 4;
  position: absolute;
  height: 100%;
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
} 
.citypickers{
  z-index: 4;
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: #fff;
}
.citybody {
  z-index: 4;
  background-color: #fff;
  position: fixed;
  bottom: 0px;
}
.cityheader {
  background-color: #fff;
  opacity: 1;
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  
}
.city-cancel {
  z-index: 4;
  background-color: #fff;
  float: left;
  margin: 16rpx;
  color: #818181;
  opacity: 1;
}
.city-true {
  z-index: 4;
  background-color: #fff;
  float: right;
  margin: 16rpx;
  color: #2FB42E;
  opacity: 1;
}

.section .picker {
  z-index: 4;
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
  opacity:1;
}
